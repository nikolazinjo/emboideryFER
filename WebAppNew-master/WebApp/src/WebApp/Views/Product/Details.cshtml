@model Product

@{
    ViewData["Title"] = "Details";
}



<h2>Details</h2>

<form asp-action="Details" asp-controller="Product">
    <div class="form-horizontal">
        <h4>Product</h4>
        <hr />
        <div class="form-group">
            <label asp-for="ProductName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ProductName" class="form-control" disabled="disabled" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProductPrice" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ProductPrice" class="form-control" disabled="disabled"/>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProductPrice" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ProductPrice" class="form-control" disabled="disabled" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Category" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Category" class="form-control" placeholder="Enter category" disabled="disabled"/>
                <span asp-validation-for="Category" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PriorityView" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PriorityView" class="form-control" disabled="disabled" />
            </div>
        </div>
        @if (Model.IsUnlimited)
        {
            <div class="form-group">
                <label asp-for="Quantity" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <mark class="input-group" aria-checked="True" disabled="disabled" />Product is unlimited<mark />
                </div>
            </div>
        }
        else
        {
            <div class="form-group">
                <label asp-for="Quantity" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Quantity" class="form-control" disabled="disabled" />
                </div>
            </div>
        }
        <div class="form-group">
            <label asp-for="ProductDescription" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="ProductDescription" class="form-control" disabled="disabled"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <img src="~/images/@Model.ThumbPath" alt="@Model.ProductName image" class="img-thumbnail"/>
                <br />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-primary">Edit</a>
                <a asp-action="ProductList" class="btn btn-warning">Cancel</a>
            </div>
        </div>
    </div>
</form>



